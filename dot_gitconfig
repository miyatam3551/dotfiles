[credential]
    # 認証情報ヘルパーをリセット
    helper =
    # Git Credential Managerを使用（パスワード管理）
    helper = /usr/local/share/gcm-core/git-credential-manager

[credential "https://dev.azure.com"]
    # Azure DevOps用の設定（リポジトリごとに認証情報を保存）
