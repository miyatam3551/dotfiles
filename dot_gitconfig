# ============================================================
# コア設定
# ============================================================
[core]
    # ページャーにdeltaを使用（見やすいdiff表示）
    # cargo install git-delta
    pager = delta
    # シンボリックリンクを有効化
    symlinks = true
    # デフォルトエディタにvimを使用
    editor = vim

[init]
    # 新規リポジトリのデフォルトブランチ名
    defaultBranch = main

# ============================================================
# ブランチ・ワークフロー設定
# ============================================================
[pull]
    # pullの際にrebaseを使用（マージコミットを作らない）
    rebase = true

[fetch]
    # fetchの際にリモートで削除されたブランチをローカルからも削除
    prune = true

# ============================================================
# Diff/Merge表示設定
# ============================================================
[delta]
    # diff内のナビゲーションを有効化（n/Nで移動可能）
    navigate = true
    # ダークモード用の配色を使用
    light = false
    # 左右分割表示を使用（変更前後を並べて表示）
    side-by-side = true

[interactive]
    # インタラクティブモードでdeltaを使用（色のみ）
    diffFilter = delta --color-only

[merge]
    # マージコンフリクト時にbase(変更前の元内容)も表示する
    conflictstyle = diff3

[diff]
    # コードの移動を検出して色分け表示
    colorMoved = default

# ============================================================
# エイリアス（便利なショートカット）
# ============================================================
[alias]
    # グラフ形式でコミット履歴を表示
    graph = log --graph --date-order -C -M --pretty=format:\"<%h> %ad [%an] %Cgreen%d%Creset %s\" --all --date=short

